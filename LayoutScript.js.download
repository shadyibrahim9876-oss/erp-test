function UploadUserPhoto() {

    if (window.FormData !== undefined) {
        debugger;

        //---------------------------------------------------------

        var files1 = $("#upFile").get(0).files;

        // Create FormData object
        var fData1 = new FormData();
        if (files1.length > 0) {
            fData1.append(files1[0].name, files1[0]);
        }

        for (var pair of fData1.entries()) {
            console.log(pair[0] + ', ' + pair[1]);
        }
        //-------------------------------------------------------------

        $.ajax({
            url: '/Home/UploadUserPhoto',
            type: "POST",
            contentType: false, // Not to set any content header
            processData: false, // Not to process data
            data: fData1,
            success: function (result) {
                // FadePageCover(true);
                console.log(result);

                //  GetMovesFromFile_BindTableRows(result);
                // swal("Done", "File Uploaded Successfully!", "sucess");
